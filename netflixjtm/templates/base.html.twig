<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}NetflixJTM{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        
        <style>
            body {
                color: white;
            }
            .navbar {
                background-color: #444655 !important;
            }
            .navbar .nav-link, .navbar .navbar-brand {
                color: white !important;
            }
            .btn-primary {
                background-color: #007bff !important;
                border-color: #007bff !important;
                color: white !important;
            }
            .dropdown-menu {
                background-color: #000;
                border: none;
            }
            .dropdown-menu .dropdown-item {
                color: white !important;
            }
            .dropdown-menu .dropdown-item:hover {
                background-color: rgba(255, 255, 255, 0.2);
            }
        </style>
        
        {% block stylesheets %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" href="#">NetflixJTM</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_film') }}">Films</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_serie') }}">Séries</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="btn btn-primary me-2" href="{{ path('app_signup') }}">S'enregistrer</a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-primary" href="{{ path('app_login') }}">Connexion</a>
                        </li>
                        <!-- Mon Compte dropdown visible only if token is valid -->
                        <li class="nav-item dropdown ms-3" id="accountMenu" style="display: none;">
                            <a class="nav-link dropdown-toggle btn btn-primary" href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Mon Compte
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="accountDropdown">
                                <li><a class="dropdown-item" href="#">Mon Profil</a></li>
                                <li><a class="dropdown-item" href="#">Mes Téléchargements</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="logout">Déconnexion</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        {% block body %}{% endblock %}
        <script>
           document.addEventListener('DOMContentLoaded', function() {
            // Fonction pour vérifier la validité du token
            function isTokenValid(token) {
                try {
                    const payload = JSON.parse(atob(token.split('.')[1])); // Décodage du payload
                    const currentTime = Math.floor(Date.now() / 1000); // Temps actuel en secondes

                    // Vérification de l'expiration du token
                    return payload.exp > currentTime;
                } catch (e) {
                    return false; // Si le token est invalide ou corrompu
                }
            }

            // Vérifier le token dans le localStorage
            const token = localStorage.getItem("access_token");

            if (token && isTokenValid(token)) {
                // Si le token est valide, afficher le menu "Mon Compte"
                document.getElementById('accountMenu').style.display = 'block';
            }
        });
        </script>
    </body>
</html>
