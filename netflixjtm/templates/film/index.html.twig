{% extends 'base.html.twig' %}

{% block title %}Netflix JTM - Recherche de Films{% endblock %}

{% block stylesheets %}
<style>
    .search-container {
        margin-top: 20px;
        text-align: center;
    }

    .search-input {
        width: 50%;
        padding: 10px;
        font-size: 1.2rem;
        border-radius: 20px;
        border: 1px solid #ddd;
    }

    .search-button {
        padding: 10px 20px;
        font-size: 1.2rem;
        border-radius: 20px;
        border: none;
        background-color: #007bff;
        color: white;
        cursor: pointer;
    }

    .search-button:hover {
        background-color: #0056b3;
    }

    .table-container {
        margin-top: 20px;
    }

    .film-poster {
        width: 80px;
        border-radius: 5px;
    }

    .download-btn {
        background-color: #28a745;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 5px;
        transition: background 0.3s ease;
    }

    .download-btn:hover {
        background-color: #218838;
    }
</style>
{% endblock %}

{% block body %}
<div class="container">
    <div class="search-container">
        <input id="searchInput" type="text" class="search-input" placeholder="Recherchez un film ou une s√©rie...">
        <button id="searchButton" class="search-button">
            <i class="fa fa-search"></i> Rechercher
        </button>
    </div>

    <div class="table-container">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>Affiche</th>
                    <th>Titre</th>
                    <th>Cat√©gorie</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="filmTable">
                <!-- Les r√©sultats de recherche vont s'afficher ici -->
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>
<script>
document.addEventListener("DOMContentLoaded", function() {
    let searchButton = document.getElementById('searchButton');
    if (!searchButton) {
        console.error("Erreur : L'√©l√©ment 'searchButton' n'existe pas.");
        return;
    }

    searchButton.addEventListener('click', function(event) {
        event.preventDefault();

        let query = document.getElementById('searchInput').value;
        if (query.trim() === '') {
            alert("Veuillez entrer un titre de film.");
            return;
        }

        fetch('/search?titre=' + encodeURIComponent(query))
            .then(response => response.json())
            .then(data => {
                let filmTable = document.getElementById('filmTable');
                filmTable.innerHTML = '';

                if (!data || data.length === 0) {
                    filmTable.innerHTML = '<tr><td colspan="4" class="text-center">Aucun r√©sultat trouv√©.</td></tr>';
                    return;
                }

                data.forEach(film => {
                    let row = document.createElement('tr');

                    let imgCell = document.createElement('td');
                    let img = document.createElement('img');
                    img.src = film.cover || "https://media.giphy.com/media/baPIkfAo0Iv5K/giphy.gif";
                    img.classList.add('film-poster');
                    imgCell.appendChild(img);
                    row.appendChild(imgCell);

                    let titleCell = document.createElement('td');
                    titleCell.textContent = film.name || "Titre inconnu";
                    row.appendChild(titleCell);

                    let categoryCell = document.createElement('td');
                    categoryCell.textContent = film.type || "Inconnue";
                    row.appendChild(categoryCell);

                    let actionCell = document.createElement('td');
                    let downloadButton = document.createElement('button');
                    downloadButton.classList.add('btn', 'btn-success');
                    downloadButton.innerHTML = '<i class="fa fa-download"></i> T√©l√©charger';
                    downloadButton.addEventListener('click', function() {
                        downloadFilm(film.download_url, film.name + ".torrent");
                    });
                    actionCell.appendChild(downloadButton);
                    row.appendChild(actionCell);

                    filmTable.appendChild(row);
                });
            })
            .catch(error => {
                console.error('Erreur lors de la requ√™te API :', error);
                alert("Une erreur est survenue. V√©rifie que l'API est bien accessible.");
            });
    });

    function downloadFilm(url, filename) {
    fetch('/download', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
        },
        body: new URLSearchParams({
            'url': url,
            'filename': filename
        })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Affiche une bo√Æte de dialogue de confirmation styl√©e
            const message = `üìÇ T√©l√©chargement termin√© !\n\nLe fichier est enregistr√© sous :\n${data.path}`;
            showNativePopup("success", message);
        } else {
            showNativePopup("error", `‚ö†Ô∏è Erreur : ${data.error}`);
        }
    })
    .catch(error => {
        console.error('Erreur lors du t√©l√©chargement :', error);
        showNativePopup("error", "üö® Une erreur critique est survenue !");
    });
}
    function showNativePopup(type, message) {
        const popup = document.createElement("div");
        popup.innerText = message;
        popup.style.position = "fixed";
        popup.style.bottom = "20px";
        popup.style.left = "50%";
        popup.style.transform = "translateX(-50%)";
        popup.style.padding = "15px";
        popup.style.borderRadius = "8px";
        popup.style.color = "#fff";
        popup.style.fontSize = "16px";
        popup.style.boxShadow = "0px 4px 8px rgba(0,0,0,0.2)";
        popup.style.zIndex = "1000";
        popup.style.transition = "opacity 0.3s ease-in-out";

        // D√©finition des styles selon le type de message
        if (type === "success") {
            popup.style.backgroundColor = "#28a745"; // Vert pour succ√®s
        } else {
            popup.style.backgroundColor = "#dc3545"; // Rouge pour erreur
        }

        document.body.appendChild(popup);

        // Disparition apr√®s 3 secondes
        setTimeout(() => {
            popup.style.opacity = "0";
            setTimeout(() => popup.remove(), 300);
        }, 3000);
    }

});
</script>

{% endblock %}
