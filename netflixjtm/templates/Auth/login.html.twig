{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container my-5">
        <h2 class="text-center mb-4">Se connecter</h2>
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-lg p-4" style="border-radius: 15px; background-color: #f8f9fa;">
                    <form id="loginForm">
                        <div class="mb-3">
                            <label for="username" class="form-label">Nom d'utilisateur</label>
                            <input type="text" id="username" class="form-control form-control-lg" placeholder="Entrez votre nom d'utilisateur" style="border-radius: 10px; border: 1px solid #ccc; padding: 10px;">
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Mot de passe</label>
                            <input type="password" id="password" class="form-control form-control-lg" placeholder="Entrez votre mot de passe" style="border-radius: 10px; border: 1px solid #ccc; padding: 10px;">
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg w-100" style="border-radius: 10px; background-color: #007bff; border-color: #007bff;">Se connecter</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Notification Popup -->
    <div id="notification" class="notification" style="display: none; position: fixed; bottom: 20px; left: 50%; transform: translateX(-50%); background-color: #28a745; color: white; padding: 10px 20px; border-radius: 10px; box-shadow: 0px 4px 6px rgba(0,0,0,0.1); font-size: 16px; z-index: 9999;">
        Connexion réussie
    </div>

    <script>
        document.querySelector('#loginForm').addEventListener('submit', function(event) {
            event.preventDefault();  // Empêcher la soumission classique du formulaire

            let username = document.querySelector('#username').value;
            let password = document.querySelector('#password').value;

            // Envoyer la requête API pour la connexion à FastAPI
            fetch('http://127.0.0.1:8086/login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    username: username,
                    password: password
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.access_token) {
                    // Afficher la notification
                    let notification = document.getElementById('notification');
                    notification.innerText = 'Connexion réussie';
                    notification.style.backgroundColor = '#28a745'; // Vert pour succès
                    notification.style.display = 'block';

                    // Masquer la notification après 4 secondes
                    setTimeout(() => {
                        notification.style.display = 'none';
                    }, 4000);

                    // Enregistrer le token et rediriger
                    localStorage.setItem('access_token', data.access_token);
                    window.location.href = '/'; // Remplace par l'URL de redirection après connexion
                } else {
                    // Afficher la notification d'erreur
                    let notification = document.getElementById('notification');
                    notification.innerText = 'Erreur de connexion';
                    notification.style.backgroundColor = '#dc3545'; // Rouge pour erreur
                    notification.style.display = 'block';

                    // Masquer la notification après 4 secondes
                    setTimeout(() => {
                        notification.style.display = 'none';
                    }, 4000);
                }
            })
            .catch(error => {
                console.error('Erreur:', error);
                let notification = document.getElementById('notification');
                notification.innerText = 'Erreur lors de la connexion';
                notification.style.backgroundColor = '#dc3545'; // Rouge pour erreur
                notification.style.display = 'block';

                // Masquer la notification après 4 secondes
                setTimeout(() => {
                    notification.style.display = 'none';
                }, 4000);
            });
        });
    </script>
{% endblock %}
