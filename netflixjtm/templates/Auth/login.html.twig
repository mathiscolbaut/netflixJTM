{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container my-5">
        <h2 class="text-center mb-4">Se connecter</h2>
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-lg p-4" style="border-radius: 15px; background-color: #f8f9fa;">
                    <form id="loginForm">
                        <div class="mb-3">
                            <label for="username" class="form-label">Nom d'utilisateur</label>
                            <input type="text" id="username" class="form-control form-control-lg" placeholder="Entrez votre nom d'utilisateur" style="border-radius: 10px; border: 1px solid #ccc; padding: 10px;">
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Mot de passe</label>
                            <input type="password" id="password" class="form-control form-control-lg" placeholder="Entrez votre mot de passe" style="border-radius: 10px; border: 1px solid #ccc; padding: 10px;">
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg w-100" style="border-radius: 10px; background-color: #007bff; border-color: #007bff;">Se connecter</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.querySelector('#loginForm').addEventListener('submit', function(event) {
            event.preventDefault();  // Empêcher la soumission classique du formulaire

            let username = document.querySelector('#username').value;
            let password = document.querySelector('#password').value;

            // Envoyer la requête API pour la connexion à FastAPI
            fetch('http://127.0.0.1:8086/login', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    username: username,
                    password: password
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.access_token) {
                    alert('Connexion réussie');
                    // Vous pouvez rediriger l'utilisateur après la connexion réussie
                    localStorage.setItem('access_token', data.access_token);
                    window.location.href = '/'; // Remplacez par l'URL de redirection après connexion
                } else {
                    alert('Erreur de connexion');
                }
            })
            .catch(error => {
                console.error('Erreur:', error);
                alert('Erreur lors de la connexion');
            });
        });
    </script>
{% endblock %}
